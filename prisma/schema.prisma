// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Back to sqlite for EC2 deployment
  url      = env("DATABASE_URL")
}

model Decision {
  id           Int      @id @default(autoincrement())
  caseId       String
  caseType     String
  caseTitle    String
  caseSummary  String
  evidence     String   // JSON string of selected evidence
  witness      String?  // JSON string of selected witness
  objection    String?
  juryVotes    String   // JSON string of jury votes
  notes        String?
  strength     Int
  timestamp    DateTime @default(now())
  
  @@index([caseType])
  @@index([timestamp])
}