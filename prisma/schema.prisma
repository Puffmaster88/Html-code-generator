generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Make sure it says postgresql, NOT sqlite
  url      = env("DATABASE_URL")
}

model Decision {
  id                  Int      @id @default(autoincrement())
  caseType            String
  caseTitle           String
  caseSummary         String
  selectedEvidence    String   // ADD THIS!
  selectedWitness     String?
  objection           String?
  juryVotesGuilty     Int?
  juryVotesNotGuilty  Int?
  verdict             String?
  caseStrength        Int?
  notes               String?
  createdAt           DateTime @default(now())
}
  
  @@index([caseType])
  @@index([timestamp])
